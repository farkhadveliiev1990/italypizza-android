<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.latitude22.homemdopao.ThankYouShop">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:id="@+id/detail_header"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/header_img"
            android:layout_width="30dp"
            android:layout_height="27dp"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ar_hdr" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obrigad@"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/tv_main"
        android:text="Obrigad@Agradecemos a sua confiança"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_below="@+id/detail_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="A sua encomenda foi recebida!Por favor desloque-se à nossa loja para proceder ao pagamento e começar a receber a sua encomenda"
        android:id="@+id/tv_status"
        android:layout_below="@+id/tv_main"
        android:textSize="17sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="0dp"
        android:textColor="@color/colorPrimaryDark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Morada 1: "
        android:padding="2dp"
        android:layout_below="@+id/tv_main"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="0dp"
        android:textColor="@color/colorAccent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:id="@+id/location_one"
            android:text="Calçada da Picheleira 118A, 1900-381 Lisboa"
            android:layout_below="@+id/tv_main"
            android:textSize="17sp"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="0dp"
            android:textColor="@color/colorAccent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutDirection_one"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Direções para a loja"
                android:padding="0dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/goDirection_one"
            android:layout_gravity="end"
            android:padding="2dp"
            android:src="@drawable/shoplocation"/>
            </LinearLayout>
            </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morada 2: "
            android:padding="2dp"
            android:layout_below="@+id/tv_main"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="0dp"
            android:textColor="@color/colorAccent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Av. Mouzinho de Albuquerque 36B, 1170-105 Lisboa"
                android:layout_below="@+id/tv_main"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="0dp"
                android:textColor="@color/colorAccent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutDirection_two"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Direções para a loja"
                    android:padding="0dp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/goDirection_two"
                    android:layout_gravity="end"
                    android:padding="2dp"
                    android:src="@drawable/shoplocation"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morada 3: "
            android:padding="5dp"
            android:layout_below="@+id/tv_main"
            android:textSize="17sp"
            android:layout_marginTop="2dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="0dp"
            android:textColor="@color/colorAccent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="R. dos Arneiros 87A, 1500-066 Lisboa"
                android:layout_below="@+id/tv_main"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="0dp"
                android:textColor="@color/colorAccent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutDirection_three"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Direções para a loja"
                    android:padding="0dp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/goDirection_three"
                    android:layout_gravity="end"
                    android:padding="2dp"
                    android:src="@drawable/shoplocation"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pay_shop_finish"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:background="@color/colorAccent"
        android:text="Finalizar"/>
</LinearLayout>
