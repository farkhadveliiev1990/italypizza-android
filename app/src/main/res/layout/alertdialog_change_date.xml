<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Catgory_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_margin="15dp"
            android:text="Data de alteração"
            android:textColor="@color/colorPrimaryDark"
            />

        <EditText
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:inputType="date"
            android:padding="5dp"
            android:hint="Set Date"
            android:editable="false"
            android:drawableRight="@drawable/calendar_icon"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/alert_chnge_date"/>

        <EditText
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:inputType="date"
            android:padding="5dp"
            android:hint="Set Time"
            android:editable="false"
            android:drawableRight="@drawable/calendar_icon"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/alert_chnge_time"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_sbt"
            android:layout_gravity="center"
            android:text="Enviar"
            android:layout_marginBottom="20dp"
            android:textColor="#fff"
            android:background="@drawable/bt_small"/>

        <TextView
            android:id="@+id/cancel_Catgory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:padding="10dp"
            android:text="Cancelar"
            android:textColor="#fff"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>
</RelativeLayout>